      "type": "string",
      "required": false,
      "title": "Priority",
      "enum": {
        "urgent": "urgent",
        "high": "high",
        "normal": "normal",
        "low": "low"
      }
    },
    "status": {
      "type": "string",
      "required": false,
      "title": "Status",
      "enum": {
        "new": "New",
        "open": "Open",
        "pending": "Pending",
        "hold": "On-Hold",
        "solved": "Solved",
        "closed": "Closed"
