{
  "type": "object",
  "properties": {
    "external_id": {
      "type": "string",
      "required": false,
      "title": "External ID"
    },
    "type": {
      "type": "string",
      "required": false,
      "title": "Type",
      "enum": [
        "problem",
        "incident",
        "question",
        "task"
      ]
    },
    "subject": {
      "type": "string",
      "required": false,
      "title": "Subject"
    },
    "description": {
      "type": "string",
      "required": false,
      "title": "Descriptor"
    },
    "priority": {
      "type": "string",
      "required": false,
      "title": "Priority",
      "enum": [
        "urgent",
        "high",
        "normal",
        "low"
      ]
    },
    "status": {
      "type": "string",
      "required": false,
      "title": "Status",
      "enum": [
        "new",
        "open",
        "pending",
        "hold",
        "solved",
        "closed"
      ]
    },
    "requester": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "required": true,
          "title": "Requester Name"
        },
        "email": {
          "type": "string",
          "required": true,
          "title": "Requester E-Mail"
        }
      }
    }
  }
}
