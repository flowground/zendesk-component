{
  "type": "object",
  "properties": {
    "external_id": {
      "type": "string",
      "required": false,
      "title": "External ID"
    },
    "type": {
      "type": "string",
      "required": false,
      "title": "Type",
      "enum": {
        "problem": "Problem",
        "incident": "Incident",
        "question": "Question",
        "task": "Task"
      }
    },
    "subject": {
      "type": "string",
      "required": false,
      "title": "Subject"
    },
    "description": {
      "type": "string",
      "required": false,
      "title": "Descriptor"
    },
